{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Values",
    "required": [
        "backends"
    ],
    "properties": {
        "hideAdvancedTab": {
            "type": "boolean",
            "description": "Hides the advanced tab in the Assistant sidebar"
        },
        "backends": {
            "type": "array",
            "description": "An array of Assistant backends",
            "items": {
                "type": "object",
                "description": "An Assistant backend",
                "required": [
                    "name",
                    "discoveryEndpoint"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "A name for the backend"
                    },
                    "discoveryEndpoint": {
                        "type": "string",
                        "description": "URL to the backend's discovery endpoint"
                    },
                    "auth": {
                        "type": "object",
                        "description": "Use if the Assistant backend requires authentication",
                        "required": [
                            "secretName"
                        ],
                        "properties": {
                            "secretName": {
                                "type": "string",
                                "description": "Name of a K8s secret containing the email and token to use for authentication"
                            }
                        }
                    }
                }
            }
        }
    }
}